<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_height"
    android:background="@color/colorPrimary"
    android:gravity="center_vertical"
    >
    <ImageView
        android:id="@+id/image_nav_left"
        android:layout_width="@dimen/nav_height"
        android:layout_height="@dimen/nav_height"
        android:padding="@dimen/nav_padding_icon"
        android:src="@drawable/ic_back"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription"
        />
    <ImageView
        android:id="@+id/image_logo_left"
        android:layout_width="@dimen/logo_width"
        android:layout_height="@dimen/nav_height"
        android:paddingLeft="@dimen/padding_10"
        android:paddingRight="@dimen/padding_10"
        android:src="@drawable/logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription"
        />

    <EditText
        android:id="@+id/edt_search_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/search_box_height"
        android:layout_marginEnd="@dimen/nav_height"
        android:layout_marginStart="@dimen/nav_height"
        android:layout_marginTop="@dimen/margin_6"
        android:background="@android:color/transparent"
        android:ellipsize="start"
        android:hint="@string/txt_search"
        android:inputType="text"
        android:singleLine="true"
        android:textColorHint="#cdcdcd"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <ImageView
        android:id="@+id/image_nav_right2"
        android:layout_width="@dimen/nav_height"
        android:layout_height="@dimen/nav_height"
        android:padding="@dimen/nav_padding_icon"
        android:visibility="gone"
        app:layout_constraintEnd_toStartOf="@+id/image_nav_right"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription"
        />
    <ImageView
        android:id="@+id/image_nav_right"
        android:layout_width="@dimen/nav_height"
        android:layout_height="@dimen/nav_height"
        android:padding="@dimen/nav_padding_icon"
        android:src="@drawable/ic_search"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription"
        />
</android.support.constraint.ConstraintLayout>
